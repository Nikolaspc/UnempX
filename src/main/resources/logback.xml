<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Ejemplo: mÃ¡s detalle solo para DataProcessor -->
    <logger name="com.myorg.unempx.service.DataProcessor" level="debug"/>
</configuration>
